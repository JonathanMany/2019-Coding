let userName = 'John'
let userQuestion = "Will I win some money?"
const randomNumber = Math.floor(Math.random() * 8)
let eightBall = ''

userName ? console.log('Hello, '+ userName) : console.log('Hello!')
console.log(`The user asked: ${userQuestion}`)

switch(randomNumber){
  case 0:
    eightBall = 'No'
    break
  case 1:
    eightBall = 'Probably Not'
    break
  case 2:
    eightBall = 'Very uncertain'
    break
  case 3:
    eightBall = 'I dont know'
    break
  case 4:
    eightBall = 'It is possible'
    break
  case 5:
    eightBall = 'It is loooking that way'
    break
  case 6:
    eightBall = 'Most likely'
    break
  case 7:
    eightball = 'Yes'
    break
  case 8:
    eightBall = 'Without a doubt'
    break
}
console.log(`The eight ball answered: ${eightBall}`)
